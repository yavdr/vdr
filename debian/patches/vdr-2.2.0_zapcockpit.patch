+int cDisplayChannelExtended::GetIndexGroup(cChannel *cur)
+{
+  cChannel *group = NULL;
+  for (cChannel *c = cur; c; c = Channels.Prev(c)) {
+      if (c->GroupSep()) {
+         group = c;
+         break;
+         }
+      }
+  if (!group)
+     return -1;
+  int i=0;
+  for (cGroupListItem *li = grouplist.First(); li; li = grouplist.Next(li)) {
+      if (li->Channel() == group)
+         return i;
+      i++;
+      }
+  return -1;
+}
